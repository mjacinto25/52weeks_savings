DATABASE STRUCTURE:
52weeks_savings
  users
    id: integer, primary-key, auto-increment
    username: string
    password: string
    name: string
  savings
    id: integer, primary-key, auto-increment
    user_id: integer
    base_amount: float
    limit: integer
    type: string
    name: string
    description: test
  remmittance
    id: integer, primary-key, auto-increment
    savings_id: integer
    amount: float
    remmittance_num: integer

DATABASE: savings-app
TABLES: users, savings, remmittance
